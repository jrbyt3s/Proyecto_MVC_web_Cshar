@model SistemasColegio.MVC.Models.Colegio.Matricula

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <style>
        /* Reset de estilos y configuración básica */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #F0F8FF;
            padding-top: 3rem; /* Ajusta el espacio superior según sea necesario */
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h4 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"],
        select {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
        }

            input[type="text"]:focus,
            select:focus {
                outline: none;
                border-color: #66afe9;
                box-shadow: 0 0 8px rgba(102, 175, 233, 0.6);
            }

        .btn-primary {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            cursor: pointer;
            color: #fff;
            background-color: #BA915D;
            border: none;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #481F23;
            }

        .back-link {
            display: inline-block;
            margin-top: 20px;
            color: #007bff;
            text-decoration: none;
            font-size: 1rem;
        }

            .back-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <h4>Editar Matrícula</h4>
        <hr>

        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="MatriculaId">ID de Matrícula</label>
                <input type="hidden" asp-for="MatriculaId" />
            </div>
            <div class="form-group">
                <label asp-for="Fecha">Fecha</label>
                <input asp-for="Fecha" />
            </div>
            <div class="form-group">
                <label asp-for="AlumnoId" class="control-label">Alumno</label>
                <select asp-for="AlumnoId" asp-items="ViewBag.AlumnoId"></select>
                <span asp-validation-for="AlumnoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GradoId" class="control-label">Grado</label>
                <select asp-for="GradoId" asp-items="ViewBag.GradoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SeccionId" class="control-label">Sección</label>
                <select asp-for="SeccionId" asp-items="ViewBag.SeccionId"></select>
            </div>
            <button type="submit" class="btn-primary">Guardar</button>
        </form>

        <a asp-action="Index" class="back-link">Volver al Listado</a>
    </div>

</body>
</html>
